.main-chat__talk__content{data: {message: {id: message.id}}}
  .main-chat__talk__content__info
    .main-chat__talk__content__info--name
      = message.user.name
    .main-chat__talk__content__info--time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__talk__content__message
    = message.content
    %br
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?