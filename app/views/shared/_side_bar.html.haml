.side-bar
  .side-bar__user
    .side-bar__user__box
      %p.side-bar__user__box--name
        = current_user.name
      %ul.side-bar__user__box__menu
        = link_to edit_user_path(current_user.id) do
          %li.side-bar__user__box__menu__list
            = icon('fas', 'edit', class: "side-bar__user__box__menu__list--icon")
        = link_to new_group_path do
          %li.side-bar__user__box__menu__list
            = icon('fas', 'cog', class: "side-bar__user__box__menu__list--icon")
  .side-bar__group
    - current_user.groups.each do |group|
      = link_to group_messages_path(group.id) do
        .side-bar__group__box
          .side-bar__group__box--name
            = group.name
          .side-bar__group__box--status
            = group.show_last_message
